{
    "manifest_version": 3,
    "name": "Book Country Identifier (ISBN)",
    "version": "1.0",
    "description": "Identifies the country of origin for a book on indigo.ca by scraping its ISBN and querying an AI API.",
    "permissions": ["activeTab", "scripting", "tabs"],
    "host_permissions": ["https://www.indigo.ca/*", "https://generativelanguage.googleapis.com/*", "https://www.googleapis.com/*",
    "https://openlibrary.org/*"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.indigo.ca/*"],
        "js": ["content.js"]
      }
    ]
}  